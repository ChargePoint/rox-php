{
  "autoload": {
    "psr-4": {
      "\\": "src/"
    },
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "\\": "tests/"
    },
    "classmap": [
      "src/",
      "tests/"
    ]
  },
  "config": {
    "platform": {
      "php": "5.5"
    }
  },
  "require": {
    "php": ">=5.5",
    "ext-json": "*",
    "ext-openssl": "*",
    "guzzlehttp/guzzle": "^6.4",
    "psr/http-message": "^1.0",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^4",
    "mockery/mockery": "^0.9.11"
  },
  "scripts": {
    "test": "phpunit"
  }
}
